<%= form_with(model: transfer) do |form| %>
  <% if transfer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transfer.errors.count, "error") %> prohibited this transfer from being saved:</h2>

      <ul>
        <% transfer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Select currency:", class: "form-label" %>
    <%= form.select :name, ['Euro', 'USD', 'Pound'],
        {}, {class: "form-select form-select-lg mb-3"}  %>
  </div>

  <div class="field">
    <%= form.label :group_id, "Select group:", class: "form-label" %>
    <%= form.select :group_id, Group.select(:name).map(&:name),
        {}, {class: "form-select form-select-lg mb-3"} %>
  </div>

  <div class="field">
    <%= form.label :amount, "Amount:", class: "form-label" %>
    <%= form.number_field :amount, step: :any, class: "form-control" %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
