<h1>Transfers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>User</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% running_total = 0 %>
    <% @transfers.each do |transfer| %>
      <% if transfer.user != @current_user %>
      <tr>
        <td><%= transfer.name %></td>
        <td><%= transfer.amount %></td>
        <td><%= transfer.user_id %></td>
        <td><%= transfer.group_id %></td>
        <td><%= link_to 'Show', transfer %></td>
        
        <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        <% running_total = running_total + transfer.amount %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transfer', new_transfer_path %>

<h4 class="btn btn-success pull-right">Transfer total: <%= running_total %>